<div class="game_area">
  <div class="stocks">
    <% @game.stocks.each do |stock| -%>
      <div class="stock">
        <%= render stock %>
      </div>
    <% end -%>
  </div>
  <div class="boards">
    <% @game.players.each do |player| -%>
      <div class="board" data-player_id="<%= player.id %>">
        <div><%= player %></div>
      </div>
    <% end -%>
  </div>
  <div class="hand">
    <div class="hand_cards">
      <% @game.current_player.hand_for(@game).cards.each do |card| -%>
        <div class="hand_card">
          <%= render card %>
        </div>
      <% end -%>
    </div>
  </div>
</div>
